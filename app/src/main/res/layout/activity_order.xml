<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.order.OrderActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/order_tb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Order"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/order_products_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/order_products_list_title"
            android:textColor="@color/black"
            android:textSize="@dimen/order_large_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_tb" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_pending_cart_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/margin_small"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/line_separator1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_products_title_tv"
            tools:listitem="@layout/item_order_pending_cart" />

        <View
            android:id="@+id/line_separator1"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/price_summary_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price_summary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/order_price_summary_title"
            android:textColor="@color/black"
            android:textSize="@dimen/order_large_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/products_sum_title_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/products_sum_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/order_products_sum_title"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            app:layout_constraintBottom_toTopOf="@+id/discount_price_title_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/products_sum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/products_sum_title_tv"
            tools:text="50,000원" />

        <TextView
            android:id="@+id/discount_price_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@string/order_discount_price"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            app:layout_constraintBottom_toTopOf="@+id/discount_description_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/discount_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/discount_price_title_tv"
            tools:text="-2,000원" />

        <TextView
            android:id="@+id/discount_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            app:layout_constraintBottom_toTopOf="@+id/line_separator2"
            app:layout_constraintStart_toStartOf="@id/discount_price_title_tv"
            tools:text="-> 50000원 이상 구매시 2000원 할인" />

        <View
            android:id="@+id/line_separator2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/final_price_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/final_price_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/order_final_price_title"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pay_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/final_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/order_medium_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/final_price_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="48,000원" />


        <TextView
            android:id="@+id/pay_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/button_primary_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/order_large_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="48,000원 결제하기" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
