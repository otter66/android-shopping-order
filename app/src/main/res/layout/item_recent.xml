<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recentProduct"
            type="woowacourse.shopping.model.RecentProductState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recent_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background"
            loadUrl="@{recentProduct.productImageUrl}" />

        <TextView
            android:id="@+id/recent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@id/recent_image_view"
            app:layout_constraintStart_toStartOf="@id/recent_image_view"
            app:layout_constraintTop_toBottomOf="@id/recent_image_view"
            tools:text="마스터볼"
            android:text="@{recentProduct.productName}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
