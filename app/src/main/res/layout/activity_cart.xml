<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".feature.cart.CartActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cart_tb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Cart"
            app:titleTextColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_product_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/margin_large"
            android:paddingEnd="@dimen/margin_large"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/page_selector_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_tb"
            tools:listitem="@layout/item_cart_product" />

        <LinearLayout
            android:id="@+id/skeleton_ll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/page_selector_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_tb">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@color/super_light_gray"
                android:orientation="vertical"
                android:padding="20dp">

                <View
                    android:id="@+id/view2"
                    android:layout_width="220dp"
                    android:layout_height="26dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="134dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />


                <View
                    android:id="@+id/view"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view4" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@color/super_light_gray"
                android:orientation="vertical"
                android:padding="20dp">

                <View
                    android:id="@+id/view5"
                    android:layout_width="220dp"
                    android:layout_height="26dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="134dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" />


                <View
                    android:id="@+id/view8"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view6" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view8" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view7" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_selector_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/page_number_minus_tv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@color/teal_200"
                android:gravity="center"
                android:text="@string/left_charactor"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/page_number_tv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                tools:text="0" />

            <TextView
                android:id="@+id/page_number_plus_tv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@color/teal_200"
                android:gravity="center"
                android:text="@string/right_charactor"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/page_number_tv" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <CheckBox
                android:id="@+id/all_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginBottom="4dp"
                android:padding="0dp"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="전체"
                android:textColor="@color/white"
                android:textSize="@dimen/cart_small_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/all_check_box"
                app:layout_constraintStart_toStartOf="@+id/all_check_box"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/total_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="0원"
                android:textColor="@color/white"
                android:textSize="@dimen/cart_large_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/order_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/order_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/teal_200"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="주문하기(0)"
                android:textColor="@color/white"
                android:textSize="@dimen/cart_large_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
