<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.product.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_tb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Shopping"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/cart_count_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_cart_product_count_circle_"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="51" />

            <ImageView
                android:id="@+id/cart_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:src="@drawable/icon_cart" />
        </androidx.appcompat.widget.Toolbar>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_tb"
            tools:listitem="@layout/item_product" />

        <include
            android:id="@+id/skeleton_layout"
            layout="@layout/skeleton_main"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
